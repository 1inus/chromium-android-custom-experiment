<LinearLayout android:id="@+id/language_item" android:layout_marginLeft="0dp" android:paddingLeft="@dimen/pref_languages_padding" android:paddingRight="@dimen/pref_languages_padding" style="@style/ListItemContainer" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
  

    
  <org.chromium.chrome.browser.widget.TintedImageView android:id="@+id/icon_view" app:chrometint="@color/dark_mode_tint" style="@style/ListItemStartIcon"/>
  

    
  <LinearLayout android:layout_gravity="center_vertical" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="0dp" android:orientation="vertical">
    

        
    <TextView android:id="@+id/title" android:layout_height="wrap_content" android:layout_width="match_parent" style="@style/PreferenceTitle"/>
    

        
    <TextView android:id="@+id/description" android:layout_height="wrap_content" android:layout_width="match_parent" style="@style/PreferenceSummary"/>
    

    
  </LinearLayout>
  

    
  <org.chromium.chrome.browser.widget.ListMenuButton android:background="@null" android:id="@+id/more" android:layout_height="match_parent" android:layout_width="wrap_content" android:paddingLeft="@dimen/selectable_list_layout_row_padding" android:paddingRight="@dimen/selectable_list_layout_row_padding" android:src="@drawable/ic_more_vert_black_24dp" app:chrometint="@color/dark_mode_tint" app:menuWidth="@dimen/pref_languages_item_popup_width" tools:ignore="ContentDescription"/>
  

</LinearLayout>
