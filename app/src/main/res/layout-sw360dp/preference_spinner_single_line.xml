<!-- Layout used by SpinnerPreference if singleLine is set to true. -->
<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:paddingBottom="6dp" android:paddingRight="@dimen/pref_spinner_padding_end" android:paddingTop="12dp" style="@style/PreferenceLayout" xmlns:android="http://schemas.android.com/apk/res/android">
  

    
  <TextView android:id="@+id/title" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="0dp" android:paddingBottom="12dp" android:paddingTop="12dp" android:textAlignment="viewStart" android:textColor="@color/google_grey_600" style="@style/PreferenceTitle"/>
  

    
  <Spinner android:gravity="end" android:id="@+id/spinner" android:layout_height="wrap_content" android:layout_width="wrap_content" android:paddingBottom="12dp" android:paddingTop="12dp"/>
  

</LinearLayout>
