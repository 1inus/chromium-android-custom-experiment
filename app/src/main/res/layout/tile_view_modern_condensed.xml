<!-- A site suggestion tile. -->
<org.chromium.chrome.browser.suggestions.TileView android:layout_height="wrap_content" android:layout_width="@dimen/tile_view_width_condensed" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
  

    
  <!-- The icon background. -->
  
    
  <View android:background="@drawable/tile_view_icon_background_modern" android:id="@+id/tile_view_icon_background" android:layout_gravity="center_horizontal" android:layout_height="@dimen/tile_view_icon_size" android:layout_marginTop="@dimen/tile_view_icon_background_margin_top_modern" android:layout_width="@dimen/tile_view_icon_size"/>
  

    
  <!-- The main icon. -->
  
    
  <ImageView android:id="@+id/tile_view_icon" android:layout_gravity="center_horizontal" android:layout_height="@dimen/tile_view_icon_size_modern" android:layout_marginTop="@dimen/tile_view_icon_margin_top_modern" android:layout_width="@dimen/tile_view_icon_size_modern" tools:ignore="ContentDescription"/>
  

    
  <!-- The touch highlight. -->
  
    
  <View android:background="@drawable/tile_view_highlight" android:id="@+id/tile_view_highlight" android:layout_gravity="center_horizontal" android:layout_height="@dimen/tile_view_icon_size" android:layout_marginTop="@dimen/tile_view_icon_background_margin_top_modern" android:layout_width="@dimen/tile_view_icon_size"/>
  

    
  <!-- The offline badge. -->
  
    
  <ImageView android:contentDescription="@string/accessibility_ntp_offline_badge" android:id="@+id/offline_badge" android:layout_gravity="top|end" android:layout_height="@dimen/tile_view_offline_badge_size_modern" android:layout_marginRight="@dimen/tile_view_offline_badge_margin_end_modern_condensed" android:layout_marginTop="@dimen/tile_view_offline_badge_margin_top_modern_condensed" android:layout_width="@dimen/tile_view_offline_badge_size_modern" android:visibility="gone" app:srcCompat="@drawable/ic_offline_pin_blue_white"/>
  

    
  <!-- The title. -->
  
    
  <TextView android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/tile_view_title" android:layout_height="wrap_content" android:layout_marginTop="@dimen/tile_view_title_margin_top_modern" android:layout_width="match_parent" android:lineSpacingMultiplier="1.17" android:lines="2" android:textColor="@color/tile_view_text" android:textSize="12sp"/>
  


</org.chromium.chrome.browser.suggestions.TileView>
