<android.support.v7.widget.GridLayout android:background="@android:color/white" android:clickable="true" android:layout_height="114dp" android:layout_width="match_parent" app:columnCount="4" app:rowCount="4" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
  
    
  <ImageView android:background="@color/google_grey_100" android:id="@+id/thumbnail" android:layout_height="114dp" android:layout_marginRight="9dp" android:layout_width="114dp" android:scaleType="fitCenter" app:layout_column="0" app:layout_row="0" app:layout_rowSpan="4" tools:ignore="ContentDescription"/>
  

    
  <Space android:layout_height="0dp" android:layout_width="wrap_content" app:layout_column="0" app:layout_columnSpan="4" app:layout_gravity="fill" app:layout_row="3"/>
  

    
  <TextView android:ellipsize="end" android:id="@+id/title" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_width="0dp" android:maxLines="2" android:minHeight="40dp" android:textAlignment="viewStart" android:textAppearance="@style/BlackBodyDefault" app:layout_column="1" app:layout_columnSpan="2" app:layout_gravity="fill_horizontal" app:layout_row="0"/>
  

    
  <TextView android:ellipsize="end" android:id="@+id/caption" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:maxLines="1" android:textAlignment="viewStart" android:textAppearance="@style/BlackCaption" app:layout_column="1" app:layout_columnSpan="3" app:layout_gravity="fill_horizontal" app:layout_row="1"/>
  

    
  <TextView android:ellipsize="end" android:id="@+id/timestamp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:maxLines="1" android:textAlignment="viewStart" android:textAppearance="@style/BlackCaption" app:layout_column="1" app:layout_gravity="center_vertical" app:layout_row="2"/>
  

    
  <ImageView android:layout_height="12dp" android:layout_marginLeft="4dp" android:layout_width="12dp" android:scaleType="centerInside" android:src="@drawable/offline_pin_round" android:tint="@color/black_alpha_65" app:layout_column="2" app:layout_columnSpan="2" app:layout_gravity="start|center_vertical" app:layout_row="2" tools:ignore="ContentDescription"/>
  

    
  <include android:layout_height="48dp" android:layout_width="48dp" android:paddingTop="12dp" app:layout_column="3" app:layout_row="0" layout="@layout/list_menu_button"/>
  

</android.support.v7.widget.GridLayout>
