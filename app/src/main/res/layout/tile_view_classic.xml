<!-- A site suggestion tile. -->
<org.chromium.chrome.browser.suggestions.TileView android:layout_height="wrap_content" android:layout_width="@dimen/tile_view_width" android:paddingLeft="4dp" android:paddingRight="4dp" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
  

    
  <!-- The main icon. -->
  
    
  <ImageView android:id="@+id/tile_view_icon" android:layout_gravity="center_horizontal" android:layout_height="@dimen/tile_view_icon_size" android:layout_marginTop="@dimen/tile_view_icon_margin_top" android:layout_width="@dimen/tile_view_icon_size" tools:ignore="ContentDescription"/>
  

    
  <!-- The touch highlight. -->
  
    
  <View android:background="@drawable/tile_view_highlight" android:id="@+id/tile_view_highlight" android:layout_gravity="center_horizontal" android:layout_height="@dimen/tile_view_icon_size" android:layout_marginTop="@dimen/tile_view_icon_margin_top" android:layout_width="@dimen/tile_view_icon_size"/>
  

    
  <!-- The offline badge. -->
  
    
  <org.chromium.chrome.browser.widget.TintedImageView android:background="@drawable/offline_badge_background" android:contentDescription="@string/accessibility_ntp_offline_badge" android:id="@+id/offline_badge" android:layout_gravity="top|end" android:layout_height="@dimen/tile_view_offline_badge_size" android:layout_width="@dimen/tile_view_offline_badge_size" android:src="@drawable/offline_pin_round" android:visibility="gone" app:chrometint="@color/suggestions_offline_badge_tint"/>
  

    
  <!-- The title. -->
  
    
  <TextView android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/tile_view_title" android:layout_height="wrap_content" android:layout_marginTop="@dimen/tile_view_title_margin_top" android:layout_width="match_parent" android:lineSpacingMultiplier="1.17" android:lines="2" android:textColor="@color/tile_view_text" android:textSize="12sp"/>
  


</org.chromium.chrome.browser.suggestions.TileView>
