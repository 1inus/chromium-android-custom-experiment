<merge tools:showIn="@layout/personalized_signin_promo_view_settings" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
  

    
  <TextView android:gravity="center" android:id="@+id/signin_promo_description" android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:layout_width="wrap_content" android:lineSpacingMultiplier="1.25" android:textAppearance="@style/BlackBodyDefault" tools:text="@string/signin_promo_description_settings"/>
  

    
  <org.chromium.ui.widget.ButtonCompat android:ellipsize="end" android:id="@+id/signin_promo_signin_button" android:layout_height="36dp" android:layout_marginBottom="6dp" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:layout_marginTop="6dp" android:layout_width="match_parent" android:maxLines="1" android:text="@string/signin_promo_continue_as" style="@style/SigninButtonCompat"/>
  

    
  <Button android:ellipsize="end" android:id="@+id/signin_promo_choose_account_button" android:layout_height="36dp" android:layout_marginBottom="6dp" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:layout_marginTop="6dp" android:layout_width="match_parent" android:maxLines="1" android:text="@string/signin_promo_choose_account" style="@style/SigninButtonBorderlessRegular"/>
  

</merge>
