<LinearLayout android:alpha="0.9" android:background="@drawable/card_single" android:gravity="center_vertical" android:id="@+id/text_container" android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">
  

    
  <!-- The 12dp padding on the left comes from the fact that the microphone is 24dp x 24dp,
         and sits in a 48dp x 48dp box.  This means there's an implied 12dp of padding
         around the entire microphone. -->
  
    
  <TextView android:gravity="center_vertical" android:id="@+id/title" android:layout_height="48dp" android:layout_weight="1" android:layout_width="0dp" android:paddingLeft="12dp" android:singleLine="true" android:text="@string/search_widget_default" android:textAlignment="viewStart" android:textColor="@color/google_grey_600" android:textSize="17sp"/>
  

    
  <ImageView android:contentDescription="@string/accessibility_toolbar_btn_mic" android:id="@+id/microphone_icon" android:layout_height="48dp" android:layout_width="48dp" android:scaleType="centerInside" android:src="@drawable/btn_mic" android:tint="@color/default_icon_color"/>
  


</LinearLayout>
