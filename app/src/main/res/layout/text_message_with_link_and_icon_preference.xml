<!-- Layout used by the TextMessageWithLinkAndIconPreference. -->
<RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:paddingBottom="24dp" style="@style/PreferenceLayout" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
  

    
  <ImageView android:id="@android:id/icon" android:layout_gravity="top" android:layout_height="wrap_content" android:layout_width="wrap_content" tools:ignore="ContentDescription"/>
  

    
  <org.chromium.ui.widget.TextViewWithClickableSpans android:id="@android:id/title" android:layout_alignTop="@android:id/icon" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_toRightOf="@android:id/icon" android:layout_width="wrap_content" style="@style/PreferenceTitle"/>
  

    
  <org.chromium.ui.widget.TextViewWithClickableSpans android:id="@android:id/summary" android:layout_below="@android:id/title" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_toRightOf="@android:id/icon" android:layout_width="wrap_content" style="@style/PreferenceSummary"/>
  


</RelativeLayout>
