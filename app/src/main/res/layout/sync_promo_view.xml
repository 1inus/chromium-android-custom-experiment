<org.chromium.chrome.browser.signin.SyncPromoView android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
  

    
  <LinearLayout android:background="@drawable/content_card_modern_background" android:id="@+id/sync_promo_view_layout" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/list_item_default_margin" android:layout_marginRight="@dimen/list_item_default_margin" android:layout_width="match_parent" android:orientation="vertical" android:padding="@dimen/sync_promo_view_padding">
    

        
    <TextView android:id="@+id/title" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:textAppearance="@style/BlackTitle1"/>
    

        
    <TextView android:gravity="center" android:id="@+id/description" android:layout_height="wrap_content" android:layout_width="match_parent" android:lineSpacingExtra="6sp" android:textAppearance="@style/BlackBody"/>
    

        
    <LinearLayout android:gravity="center_vertical" android:layout_gravity="end" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="horizontal">
      

            
      <org.chromium.ui.widget.ButtonCompat android:id="@+id/sign_in" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textAllCaps="true" android:textAppearance="@style/WhiteLink" app:buttonColor="@color/light_active_color"/>
      
        
    </LinearLayout>
    

    
  </LinearLayout>
  


</org.chromium.chrome.browser.signin.SyncPromoView>
