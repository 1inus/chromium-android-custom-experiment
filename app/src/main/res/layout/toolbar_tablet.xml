<!-- The toolbar containing the URL bar, back button, and NTP button.
-->
<org.chromium.chrome.browser.toolbar.ToolbarTablet android:background="@color/default_primary_color" android:id="@+id/toolbar" android:layout_height="@dimen/toolbar_height_no_shadow" android:layout_marginTop="@dimen/tab_strip_height" android:layout_width="match_parent" android:paddingLeft="@dimen/tablet_toolbar_start_padding" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
  

    
  <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="horizontal">
    

        
    <org.chromium.chrome.browser.toolbar.HomePageButton android:contentDescription="@string/accessibility_toolbar_btn_home" android:id="@+id/home_button" android:src="@drawable/btn_toolbar_home" android:visibility="gone" app:chrometint="@color/dark_mode_tint" style="@style/ToolbarButton"/>
    

        
    <org.chromium.chrome.browser.widget.TintedImageButton android:contentDescription="@string/accessibility_toolbar_btn_back" android:id="@+id/back_button" android:src="@drawable/btn_back" app:chrometint="@color/dark_mode_tint" style="@style/ToolbarButton"/>
    

        
    <org.chromium.chrome.browser.widget.TintedImageButton android:contentDescription="@string/accessibility_toolbar_btn_forward" android:id="@+id/forward_button" android:src="@drawable/btn_forward" app:chrometint="@color/dark_mode_tint" style="@style/ToolbarButton"/>
    

        
    <org.chromium.chrome.browser.widget.TintedImageButton android:contentDescription="@string/accessibility_btn_refresh" android:id="@+id/refresh_button" android:src="@drawable/btn_reload_stop" app:chrometint="@color/dark_mode_tint" style="@style/ToolbarButton"/>
    

        
    <org.chromium.chrome.browser.omnibox.LocationBarTablet android:background="@drawable/card_single" android:id="@+id/location_bar" android:layout_gravity="top|center" android:layout_height="match_parent" android:layout_marginBottom="5dp" android:layout_marginTop="5dp" android:layout_weight="1" android:layout_width="0dp" android:paddingLeft="2dp" android:paddingRight="1dp"/>
    

        
    <ImageButton android:contentDescription="@string/accessibility_toolbar_btn_tabswitcher_toggle_default" android:id="@+id/tab_switcher_button" android:visibility="gone" style="@style/ToolbarButton"/>
    

        
    <FrameLayout android:id="@+id/menu_button_wrapper" android:layout_height="wrap_content" android:layout_width="wrap_content">
      

            
      <org.chromium.chrome.browser.widget.TintedImageButton android:contentDescription="@string/accessibility_toolbar_btn_menu" android:id="@+id/menu_button" android:src="@drawable/ic_more_vert_black_24dp" app:chrometint="@color/dark_mode_tint" style="@style/ToolbarMenuButtonTablet"/>
      

            
      <ImageView android:id="@+id/menu_badge" android:importantForAccessibility="no" android:src="@drawable/badge_update_dark" android:visibility="invisible" style="@style/ToolbarMenuButtonTablet" tools:ignore="ContentDescription"/>
      

        
    </FrameLayout>
    
    
  </LinearLayout>
  

</org.chromium.chrome.browser.toolbar.ToolbarTablet>
